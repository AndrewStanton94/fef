{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"browser": true
	},
	"extends": ["eslint:recommended"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "warn"
	}
}
